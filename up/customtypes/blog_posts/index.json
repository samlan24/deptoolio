{
  "format": "custom",
  "id": "blog_posts",
  "label": "blog_posts",
  "repeatable": true,
  "status": true,
  "json": {
    "Main": {
      "uid": {
        "type": "UID",
        "config": {
          "label": "UID"
        }
      },
      "title": {
        "type": "StructuredText",
        "config": {
          "label": "Title",
          "placeholder": "blog title",
          "allowTargetBlank": false,
          "single": "paragraph,preformatted,heading1,heading2,heading3,heading4,heading5,heading6,strong,em,hyperlink,image,embed,list-item,o-list-item,rtl"
        }
      },
      "excerpt": {
        "type": "StructuredText",
        "config": {
          "label": "Excerpt",
          "placeholder": "Brief description for blog cards...\"",
          "allowTargetBlank": false,
          "single": "paragraph,preformatted,heading1,heading2,heading3,heading4,heading5,heading6,strong,em,hyperlink,image,embed,list-item,o-list-item,rtl"
        }
      },
      "featured_image": {
        "type": "Image",
        "config": {
          "label": "featured image",
          "constraint": {},
          "thumbnails": []
        }
      },
      "content": {
        "type": "StructuredText",
        "config": {
          "label": "Content",
          "placeholder": "blog content...",
          "allowTargetBlank": true,
          "multi": "paragraph,preformatted,heading1,heading2,heading3,heading4,heading5,heading6,strong,em,hyperlink,image,embed,list-item,o-list-item,rtl"
        }
      }
    },
    "Author": {
      "author": {
        "type": "Text",
        "config": {
          "label": "Author",
          "placeholder": "Allan"
        }
      }
    },
    "Published Date": {
      "published_date": {
        "type": "Date",
        "config": {
          "label": "Published Date",
          "placeholder": "day of publish"
        }
      }
    },
    "Category": {
      "category": {
        "type": "Select",
        "config": {
          "label": "Category",
          "placeholder": "categories",
          "options": ["Security", "Tutorials", "Best Practices"]
        }
      }
    },
    "Featured Post": {
      "featured_post": {
        "type": "Boolean",
        "config": {
          "label": "Featured Post",
          "placeholder_false": "false",
          "placeholder_true": "true",
          "default_value": false
        }
      }
    },
    "Meta Title": {
      "meta_title": {
        "type": "StructuredText",
        "config": {
          "label": "Meta Title",
          "placeholder": "",
          "allowTargetBlank": false,
          "single": "paragraph"
        }
      }
    },
    "Meta Description": {
      "meta_description": {
        "type": "StructuredText",
        "config": {
          "label": "Meta Description",
          "placeholder": "",
          "allowTargetBlank": false,
          "single": "paragraph"
        }
      }
    }
  }
}
